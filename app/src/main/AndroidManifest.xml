<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.igoticecream.pokemon.sniper"
	>

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".SniperApp"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/SniperTheme"
		>

		<activity
			android:name=".presentation.HomeActivity"
			android:label="@string/app_name"
			android:theme="@style/SniperTheme.Activity"
			/>

		<activity-alias
			android:name=".Launcher"
			android:targetActivity=".presentation.HomeActivity"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

		</activity-alias>

	</application>

</manifest>
